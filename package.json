{
  "name": "proinspect-platform",
  "version": "1.0.0",
  "description": "Multi-tenant white-label property inspection platform",
  "private": true,
  "packageManager": "pnpm@8.15.8",
  "workspaces": [
    "apps/*",
    "functions/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"npm run dev --workspace=@proinspect/web\" \"npm run dev --workspace=media-storage-service\" \"npm run dev --workspace=inspection-orchestrator\" \"npm run dev --workspace=billing-service\"",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "setup": "npm install && npm run setup:db",
    "setup:db": "npm run prisma:generate --workspace=@proinspect/gateway && npm run prisma:migrate --workspace=@proinspect/gateway",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "dotenv-cli": "^7.4.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "openssl": "^2.0.0"
  }
}
