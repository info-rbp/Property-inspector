# Gateway Environment Configuration

# Node Environment
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/proinspect_gateway

# JWT Authentication
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_ISSUER=proinspect-gateway
JWT_AUDIENCE=proinspect-platform
JWT_EXPIRES_IN=7d

# Service Authentication (Shared Secret)
SERVICE_SECRET=your-service-secret-change-in-production

# External Services URLs (Internal Network)
MEDIA_SERVICE_URL=http://localhost:3002
JOBS_SERVICE_URL=http://localhost:3003
BILLING_SERVICE_URL=http://localhost:3004
AUDIT_SERVICE_URL=http://localhost:3005
NOTIFICATIONS_SERVICE_URL=http://localhost:3006
REPORT_SERVICE_URL=http://localhost:3007
KNOWLEDGE_SERVICE_URL=http://localhost:3008
IDENTITY_SERVICE_URL=http://localhost:3009
BRANDING_SERVICE_URL=http://localhost:3010

# Google Cloud Services
GCP_PROJECT_ID=your-project-id
GCS_BUCKET_NAME=proinspect-media
VERTEX_AI_LOCATION=us-central1

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1m

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_PRETTY=true